<head>
  {% include '../parts/styles.njk' %}
</head>

<body>
  <header class="login-header">
    <div>
      <div class="header-logo">
        <a href="/home"><img src="/assets/logo.png" alt="Foodfy logo"></a>
      </div>
    </div>
  </header>

  {% include '../parts/messages.njk' %}

  <div class="login-edit-wrapper">
    <header>
      <h3>Esqueceu a senha?</h3>
    </header>
  </div>

  <form id='reset-form' method='POST' action='/admin/users/forgot-password' class="login-edit-wrapper">

    <div class="item login-fields">
      <div>E-mail</div>
      <div>
        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu e-mail para recuperar a senha"
          onblur="Validate.apply(this, 'isEmail')">
      </div>
    </div>
    </div>

    <div class="login-edit-buttons" style='justify-content: flex-end'>
      <button type='submit' form='reset-form' class="button">Recuperar</button>
    </div>

  </form>
</body>